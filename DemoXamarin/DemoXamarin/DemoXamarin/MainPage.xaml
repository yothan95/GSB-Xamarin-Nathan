<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoXamarin.MainPage">

    <StackLayout>
        <Label Text="Menu" TextColor="Red" FontAttributes="Bold" FontSize="30" HorizontalOptions="CenterAndExpand"></Label>
        <ListView ItemSelected="lvMenu_ItemSelected" x:Name="1vMenu">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal" HeightRequest="100">
                                <Image WidthRequest="30" HeightRequest="30" Source="Page.png"></Image>
                                <Label Text="{Binding Text}" WidthRequest="200" VerticalOptions="Center"></Label>
                             </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
