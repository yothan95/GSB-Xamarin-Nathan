<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoXamarin.Pages.PageTable">
  <ContentView.Content>
      <StackLayout>
            <TableView Intent="Form">
                <TableRoot Title="Informations">
                    <TableSection Title="Personnelles">
                        <TextCell Text="TextCell" Detail="Detail ici"></TextCell>
                        <ImageCell ImageSource="Xamarin.png" Text="ImageCell" Detail="Detail ici"></ImageCell>
                        <SwitchCell Text="SwitchCell"></SwitchCell>
                        <EntryCell Label="EntryCell" Placeholder="Saisir ici"></EntryCell>
                    </TableSection>
                    <TableSection Title="Professionnelles">
                        <TextCell Text="Nom de l'entreprise" Detail="Detail ici"></TextCell>
                    </TableSection>
                </TableRoot>
            </TableView>
      </StackLayout>
  </ContentView.Content>
</ContentView>