<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoXamarin.Pages.PageOnglet">
    
    <ContentPage Title="Bleu">
        <StackLayout>
            <BoxView Color="Blue" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center"></BoxView>
            <Image Source="Bleu.jpg"></Image>
        </StackLayout>
    </ContentPage>
    
    <ContentPage Title="Vert">
        <StackLayout>
            <BoxView Color="Green" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center"></BoxView>
            <Image Source="Vert.jpg"></Image>
        </StackLayout>
    </ContentPage>
    
    <ContentPage Title="Rose">
        <StackLayout>
            <BoxView Color="Pink" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center"></BoxView>
            <Image Source="Rose.jpg"></Image>
        </StackLayout>
    </ContentPage>
</ContentView>